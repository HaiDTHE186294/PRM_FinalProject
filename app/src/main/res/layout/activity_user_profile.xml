<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UserProfile">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <!--Toolbar-->
        <!--TODO: at android:background use theme/style instead of hardcode color like this-->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#388DD3"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="Profile"
            app:titleCentered="true"
            app:titleTextColor="@android:color/white"
            app:navigationIconTint="@android:color/white"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!--User's profile display part-->
    <LinearLayout
        android:id="@+id/user_info_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#50BBF0"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <!--Name-->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username here"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!--Email address-->
        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="email here"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:drawableStartCompat="@android:drawable/ic_dialog_email"
            app:drawableTint="@android:color/white" />

        <!--Role-->
        <FrameLayout
            android:id="@+id/role_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:paddingEnd="12dp"
            android:paddingBottom="4dp"
            tools:background="@color/role_lab_mng"> <!-- Example background -->

            <!-- Role's text -->
            <TextView
                android:id="@+id/user_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                tools:text="Lab Manager" /> <!-- Example text -->
        </FrameLayout>
    </LinearLayout>

    <!--Options-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_info_section">

        <!--Change Password-->
        <TextView
            android:id="@+id/option_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawablePadding="8dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="Change Password"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/abc_ic_go_search_api_material"
            app:drawableTint="?attr/colorControlNormal" />

        <!--Profile setting-->
        <TextView
            android:id="@+id/option_profile_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawablePadding="8dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="Profile setting"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/abc_ic_go_search_api_material"
            app:drawableTint="?attr/colorControlNormal" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
