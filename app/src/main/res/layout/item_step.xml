<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/status_background_pending"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/step_instruction_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Instruction Text"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/placeholder_ivAdd"
        android:layout_marginEnd="8dp" />

    <ImageView
    android:id="@+id/placeholder_ivAdd"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:src="@drawable/ic_add"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/placeholder_ivArrow"
    android:layout_marginEnd="8dp"
    android:contentDescription="Add item" />

    <ImageView
        android:id="@+id/placeholder_ivArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Expand/Collapse Log" />

</androidx.constraintlayout.widget.ConstraintLayout>